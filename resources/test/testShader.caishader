Settings {
    Blend SrcAlpha OneMinusSrcAlpha
    BlendOp Add
    Cull Back
    ZTest LessOrEqual
    ZWrite On
}

Vertex {
    Input{
       0 vec2 inPos
       1 vec2 inUv
       2 vec4 inColor
    }
    Output{
       0 vec2 outUV
       1 vec4 outColor
    }
    Properties {
       vec2 scale
       vec2 translate
    }
    Program{
        void main(){
            outUV = inUv;
            outColor = inColor;
            gl_Position = vec4(inPos * scale + translate, 0.0, 1.0);
        }
    }
}
Fragment{
    Input{
       0 vec2 inUV
       1 vec4 inColor
    }
    Output{
       0 vec4 outColor
    }
    Properties {
       sampler2D mainTexture
       vec4 tintColor
       float brightness
    }
    Program{
        void main(){
            vec4 texColor = texture(mainTexture, inUV);
            outColor = texColor * inColor * tintColor;
            outColor.rgb *= brightness;
        }
    }
}