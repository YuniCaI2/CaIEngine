Settings {
    Blend SrcAlpha OneMinusSrcAlpha
    BlendOp Add
    Cull Back
    ZTest LessOrEqual
    ZWrite On
}

Vertex {
    Input{
       0 vec2 inPos
       1 vec2 inUv
       2 vec4 inColor
    }
    Output{
       0 vec2 outUV
       1 vec4 outColor
    }
    Properties {
       vec2 scale
       vec2 translate
    }
    Program{
        int main(){
            outUV = inUV;
            outColor = inColor;
            gl_Position = vec4(inPos * scale + translate, 0.0, 1.0);
        }
    }
}
Fragment{
    fragment Test.
    this is fragment part.
    Properties {
        vec3 fragVec3
        sampler2D fragTex
    }
}

