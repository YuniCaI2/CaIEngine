Settings{
    localX 256
    localY 1
    localZ 1
}

Properties{
    float scales
}

Calling{
    struct Particle {
        vec2 position;
        vec2 velocity;
        vec4 color;
    };
}

SSBO{
    Read  Particle particlesIn
    Write Particle particlesOut
    Read  Image2D image1
    Write Image2D image2
}

Program{
    void main(){
        particlesOut[index].position = particlesIn[index].position + particlesIn[index].velocity * scales;
        particlesOut[index].velocity = particlesIn[index].velocity;
        particlesOut[index].color    = particlesIn[index].color;
    }
}
